  <rui-datepicker id="ruiDatepicker" bind:confirm="dateConfirm"></rui-datepicker>

<view class="header">
	<view class="h1">公农历日期选择器</view>
	<text class="p">@author：羯瑞</text>
</view>
<form bindsubmit="formSubmit">
	<view class="date_input">
		<view class="p">带时辰</view>
		<input type="text" placeholder="请选择日期" value="{{dateStr1}}" disabled="true" bindtap="showDatepicker1" />
	</view>
	<view class="date_input">
		<view class="p">不带时辰</view>
		<input type="text" placeholder="请选择日期" value="{{dateStr2}}" disabled="true" bindtap="showDatepicker2" />
	</view>
	<view class="date_input">
		<view class="p">带时辰（不需要确认）</view>
		<input type="text" placeholder="请选择日期" value="{{dateStr3}}" disabled="true" bindtap="showDatepicker3" />
	</view>
	<button class="date_submit" formType="submit">表单提交</button>
</form>